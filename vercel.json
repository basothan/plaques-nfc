{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.{png,jpg,jpeg,gif,svg,ico}", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/qr$", "dest": "/api/qr" },
    { "src": "^/(.*)$", "dest": "/index.html" }
  ]
}
